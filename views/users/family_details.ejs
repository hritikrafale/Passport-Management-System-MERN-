                    <input type="text" name="mother_last_name" id="mother_last_name" <% if(family_detail){%> value = "
                    <%= family_detail.mother_last_name %>" <%}%> >
                </div>
                <br>
                <div>
                    <label for="legal_guardian_first_name">Legal Guardian's First Name</label>
                    <input type="text" name="legal_guardian_first_name" id="legal_guardian_first_name" <%
                        if(family_detail){%> value = "<%= family_detail.legal_guardian_first_name %>" <%}%> >
                </div>
                <br>
                <div>
                    <label for="legal_guardian_last_name">Legal Guardian's Last Name</label>
                    <input type="text" name="legal_guardian_last_name" id="legal_guardian_last_name" <%
                        if(family_detail){%>
                    value = "<%= family_detail.legal_guardian_last_name %>" <%}%> >
                </div>
                <br>
                <div>
                    <button class="btn btn-success">Save my details</button>
                </div>
            </form>
            <br>
            <div>
                <a class="text-decoration-none btn bg-dark text-light"
